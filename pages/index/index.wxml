<view class="page">
  <view class="head">
    <view class="cu-bar search bg-white">
      <!-- ColorUI搜索框设置 -->
      <view class="cu-avatar round" style="background-image:url(https://image.weilanwl.com/img/square-2.jpg);"></view>
      <view class="search-form round">
        <text class="cuIcon-search"></text>
        <input type="text" placeholder="搜索图片、文章、视频" confirm-type="search" value='{{keyWord}}' bindconfirm='goSearch'></input>
      </view>
      <view class="action">
        <text>广州</text>
        <text class="cuIcon-triangledownfill"></text>
      </view>
    </view>
    <!-- 搜索框下面的轮播图 -->
    <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
      <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
        <view class="swiper-item">
          <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
          <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
        </view>
      </swiper-item>
    </swiper>
  </view>
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text>
      热售商品
    </view>
  </view>
  <view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}">
    <view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<gridCol*2}}">
      <view class="cuIcon-{{item.icon}} text-{{item.color}}">
        <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <text>{{item.name}}</text>
    </view>
  </view>
  <view class="flex">
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box1">box1</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box2">box2</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box3">box3</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box4">box4</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box5">box5</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box6">box6</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box7">box7</view>
    <view class="flex-sub bg-grey padding-sm margin-xs radius" id="box8">box8</view>
  </view>
</view>